{
  "version": 1.0,
  "disable_existing_loggers": true,
  "formatters": {
    "standard": {
      "datefmt": "%Y-%m-%d %H:%M:%S",
      "format": "[%(asctime)s] %(name)-7s | %(levelname)-7s | %(message)s"
    },
    "simple": {
      "datefmt": "%H:%M:%S",
      "format": "[%(asctime)s] %(levelname)-7s | %(message)s"
    }
  },
  "handlers": {
    "none": {
      "level": "CRITICAL",
      "class": "logging.NullHandler"
    },
    "stdout": {
      "level": "DEBUG",
      "formatter": "standard",
      "class": "logging.StreamHandler",
      "stream": "ext://sys.stdout"
    },
    "telegram": {
      "level": "DEBUG",
      "formatter": "simple",
      "class": "busm.TelegramHandler"
    }
  },
  "loggers": {
    "busm": {
      "level": "DEBUG",
      "handlers": [ "telegram", "stdout" ],
      "propagate": "yes"
    }
  }
}
